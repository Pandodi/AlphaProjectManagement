@model EditMemberViewModel

<section id="edit-member" class="modals">
    <div class="modal-wrapper">

        <div class="modal-header">
            <h3>Update Member</h3>
            <button class="btn">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>

        <form method="post" asp-controller="Admin" asp-action="EditMember" novalidate enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" readonly/>

            <div class="image-previewer circle">
                <img src="" class="image-preview" />
                <input asp-for="MemberImage" accept="image/*" class="hide" />
            </div>

            <div class="modal-content">
                <div class="modal-horizontal">
                    <div class="form-group">
                        <label asp-for="FirstName" class="form-label"></label>
                        <div class="field-group">
                            <input asp-for="FirstName" class="form-input" />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="form-label"></label>
                        <div class="field-group">
                            <input asp-for="LastName" class="form-input" />
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="field-group">
                        <input asp-for="Email" class="form-input" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <div class="field-group">
                        <input asp-for="PhoneNumber" class="form-input" />
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="JobTitle" class="form-label"></label>
                    <div class="field-group">
                        <input asp-for="JobTitle" class="form-input" />
                        <span asp-validation-for="JobTitle"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address.StreetName" class="form-label"></label>
                    <div class="field-group">
                        <input asp-for="Address.StreetName" class="form-input" />
                        <span asp-validation-for="Address.StreetName"></span>
                    </div>
                </div>

                <div class="modal-horizontal">
                    <div class="form-group">
                        <label asp-for="Address.PostalCode" class="form-label"></label>
                        <div class="field-group">
                            <input asp-for="Address.PostalCode" class="form-input" />
                            <span asp-validation-for="Address.PostalCode"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address.City" class="form-label"></label>
                        <div class="field-group">
                            <input asp-for="Address.City" class="form-input" />
                            <span asp-validation-for="Address.City"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <div class="field-group">
                        <input asp-for="DateOfBirth" class="form-input" />
                        <span asp-validation-for="DateOfBirth"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-blue modal-submit">Update</button>
        </form>
    </div>
</section>