@model LoginViewModel

@{
    Layout = "_CenterWrapperLayout";
    ViewData["Title"] = "Login";
}

<section id="sign-in" class="center-content">
    <div class="form-card">

        <div class="form-header">
            <h1>Login</h1>
        </div>

        <form method="post" asp-controller="Login" asp-action="ExternalLogin" novalidate>
            <button class="btn btn-external">
                <img src="/images/google-icon.svg" alt="Google Icon">
                <span>Login With Google</span>
            </button>
        </form>

        <div class="or-line"><span>OR</span></div>

        <form asp-controller="Auth" asp-action="SignIn" method="post" novalidate enctype="multipart/form-data">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>

            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div>
                    @ViewBag?.ErrorMessage
                </div>
            }

            <div class="form-content">
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-input" />
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="form-input stretch-content">
                        <input asp-for="Password" class="password-placeholder"/>
                        <i class="fa-solid fa-eye"></i>
                    </div>
                </div>

                <div class="form-accept stretch-content">
                    <div class="form-remember-me">
                        <label class="form-checkbox">
                            <input id="terms-checkbox" class="form-checkbox-input" type="checkbox" />
                            <span class="form-checkbox-box"></span>
                        </label>
                        <label for="terms-checkbox" class="form-label">Remember Me</label>
                    </div>

                    <a class="align-right" href="#">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-blue">Log In</button>
            </div>
        </form>

        <div class="form-footer">
			<span>Don't have an account? </span>
            <a asp-controller="Auth" asp-action="Signup">Sign Up</a>
         </div>
    </div>
</section>