@model ClientsViewModel

@{
	ViewData["Title"] = "Clients";
}

<partial name="Modals/_AddClientModal" model="Model.AddClientForm"/>
<partial name="Modals/_EditClientModal" model="Model.EditClientForm" />

<div class="clients-page">
    <div class="client-header stretch-content">
        <h2>Clients</h2>
        <button type="button" class="btn btn-blue" data-type="modals" data-target="#add-client">
            <i class="fa-solid fa-plus"></i>
            <span>Add Client</span>
        </button>
    </div>

    <div class="client-list">
        @await Html.PartialAsync("Partials/ClientList/_ClientList", Model.Clients)
    </div>
</div>

